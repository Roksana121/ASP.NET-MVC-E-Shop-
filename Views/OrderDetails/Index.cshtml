@model IEnumerable<E_Shop.Models.OrderDetail>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col">
        <h2>Order Details</h2>
        <div class="d-flex justify-content-end">
            <a href="@Url.Action("Create","OrderDetails")" class="btn btn-outline-primary btn-sm mb-2"><i class="bi bi-plus"></i> Add New Order</a>
        </div>
        <table class="table table-bordered table-striped table-sm table-hover">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(x => x.Customers.CustomerName)</th>
                    <th>@Html.DisplayNameFor(x => x.Products.ProductName)</th>
                    <th>@Html.DisplayNameFor(x => x.Price)</th>
                    <th>@Html.DisplayNameFor(x => x.Quantity)</th>
                    <th>@Html.DisplayNameFor(x => x.OrderDate)</th>


                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(x => item.Customers.CustomerName)</td>
                    <td>@Html.DisplayFor(x => item.Products.ProductName)</td>
                    <td>@Html.DisplayFor(x => item.Price)</td>
                    <td>@Html.DisplayFor(x => item.Quantity)</td>
                    <td>@Html.DisplayFor(x => item.OrderDate)</td>

                    <td>
                        <a href="@Url.Action("Edit","OrderDetails",new { id=item.OrderId})" class="btn btn-success btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                        <a href="@Url.Action("Delete","OrderDetails",new { id = item.OrderId })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure to delete this product?')"><i class="bi bi-trash"></i>Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


