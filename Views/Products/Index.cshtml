
@model IEnumerable<E_Shop.Models.Product>
@{
    ViewBag.Title = "Index";
}



<div class="row">
    <div class="col">
        <h2>Product List</h2>
        <div class="d-flex justify-content-end">
            <a href="@Url.Action("Create","Products")" class="btn btn-outline-primary btn-sm mb-2"><i class="bi bi-plus"></i> Add New</a>
        </div>
        <table class="table table-bordered table-striped table-sm table-hover">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(x => x.ProductName)</th>
                    <th>@Html.DisplayNameFor(x => x.Price)</th>
                    <th>@Html.DisplayNameFor(x => x.Quantity)</th>

                    <th>@Html.DisplayNameFor(x => x.SalesDate)</th>
                    <th>@Html.DisplayNameFor(x => x.ProductPhoto)</th>
                    <th>@Html.DisplayNameFor(x => x.CategoryId)</th>
                    <th>@Html.DisplayNameFor(x => x.isAvailable)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => item.ProductName)</td>
                        <td>@Html.DisplayFor(x => item.Price)</td>
                        <td>@Html.DisplayFor(x => item.Quantity)</td>

                        <td>@Html.DisplayFor(x => item.SalesDate)</td>


                        <td>
                            <img src="@Url.Content(item.ProductPhoto)" width="50" height="50" />
                        </td>
                        <td>@Html.DisplayFor(x => item.Category.CategoryName)</td>
                        <td>@Html.DisplayFor(x => item.isAvailable)</td>
                        <td>
                            <a href="@Url.Action("Edit","Products",new { id=item.ProductId})" class="btn btn-success btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                            <a href="@Url.Action("Delete","Products",new { id = item.ProductId })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure to delete this product?')"><i class="bi bi-trash"></i>Delete</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
