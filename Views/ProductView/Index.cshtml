@model IEnumerable<E_Shop.Models.Product>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col" style="width:18rem;">
        @foreach (var item in Model)
        {

        <div class="card">
            <link href="~/Content/Style.css" rel="stylesheet" />
            <img src="@Url.Content(item.ProductPhoto)" width="100" height="200" style="margin-bottom:10px;" class="card-img-top">
            <h4><b>  @Html.DisplayFor(x => item.ProductName)</b></h4>

            <p><button class="btn btn-success bg-primary">Add to Cart</button></p>
            <p><buttton class="btn btn-success bg-info">Buy Now</buttton></p>

        </div>


        }
    </div>
</div>
