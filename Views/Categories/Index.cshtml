@model IEnumerable<E_Shop.Models.Category>
@{
    ViewBag.Title = "Index";
}

  <div class="row">
    <div class="col">
        <h2>Category Information</h2>
        <div class="d-flex justify-content-end mb-2">
            <a href="@Url.Action("Create","Categories")" class="btn btn-primary btn-sm"><i class="bi bi-plus"></i> Add New</a>
        </div>
        <table class="table table-bordered table-striped table-sm table-hover">
            <thead class="table-light">
                <tr>
                    <th>SL No.</th>
                    <th>@Html.DisplayNameFor(x => x.CategoryName)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i + 1 }))
                {
                <tr id="tr-@item.Index">
                    <td>@item.Index</td>
                    <td>@item.Data.CategoryName</td>
                    <td>
                        <a href="@Url.Action("Edit","Categories",new { id=item.Data.CategoryId})" class="btn btn-info btn-sm"><i class="bi bi-pencil"></i> Edit</a>

                        <a href="@Url.Action("Delete","Categories",new { id=item.Data.CategoryId})" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>



